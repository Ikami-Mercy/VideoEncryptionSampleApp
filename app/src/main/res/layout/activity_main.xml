<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/launcher_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="12dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_select_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="Select Video" />

    <Button
        android:id="@+id/button_decrypt_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="Decrypt Video" />

    <Button
        android:id="@+id/button_decrypt_multi_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Decrypt Multiple Videos" />

    <Button
        android:id="@+id/button_lesson_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go to LESSON VIEW" />

</androidx.appcompat.widget.LinearLayoutCompat>